<p id="notice"><%= notice %></p>

<h2 class="fridge_name">
  <%= @fridge.name %>
</h2>

<p class="fridge_description">
  <%= @fridge.description %>
</p>

<div id="fridge_items_wrapper">
  <%= render @fridge.fridge_items %>
  <div id="form">
    <%= render "fridge_items/form" %>
  </div>
</div>

<div class="links">
  <%= link_to 'Edit', edit_fridge_path(@fridge) %> |
  <%= link_to 'Delete', fridge_path(@fridge), :method => :delete, data: {confirm: "Are you sure?"} %> |
  <%= link_to 'Back', fridges_path %>
</div>
